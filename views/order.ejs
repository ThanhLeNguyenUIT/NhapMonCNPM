<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Agency Management</title>
    <link rel="stylesheet" href="../resource/css/main.css">
    <link rel="stylesheet" href="../resource/css/base.css">
    <link rel="stylesheet" href="../resource/css/order.css">
    <link rel="stylesheet" href="./resource/font/fontawesome-free-5.12.1-web/css/all.min.css" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="../resource/js/order.js"></script>
</head>

<body>
    <header class="order_header">
        <div class="grid">
            <div class="order_header_container">
                <div class="order-search-container">
                        <div class="order_header-search_product">
                            <!-- có thể bị trùng-->
                            <input type="text" class="search_product-input" id="searchProduct" placeholder="Tìm kiếm" name="searchProduct" autocomplete="off">
                            <button class="search_product-button"><i class="search_product-button-icon fas fa-search"></i></button>
                        </div>
                    <ul class="order-search-dropdown">
                    </ul>
                </div>

                <div class="bill_container" id="billContainer">
                    <i class="fas fa-plus add-icon" id="addIcon"></i>
                </div>

                <div class="bill-function">
                    <a href="dashboard"><i class="fas fa-undo function"></i></a>
                    <i class="fas fa-map-marker-alt function"></i>
                    <i class="fas fa-print function"></i>
                    <span class="function accountName">
                        ThanhLeNguyen
                    </span>
                </div>
            </div>
        </div>
    </header>
    <div class="main">
        <div class="grid">
            <div class="grid__row">
                <div class="grid__column-8">
                    <div class="container_order-list">
                    </div>
                </div>

                <div class="grid__column-8-12">
                    <div class="container_bill-info">
                        <div class="bill_info-head">
                            <div class="bill_info-head-left">
                                <i class="header_user-icon fas fa-user"></i>
                                <span>0794560642</span>
                            </div>
                            <div class="bill_info-head-right">
                                <span class="date" name="dateCheckIn">05/04/2020</span>
                                <span>19:20</span>
                            </div>
                        </div>

                        <div class="bill_info-input">
                            <input class="bill-agency-input" id="searchAgency" type="text" placeholder="Đại lý" name="agencyName">
                            <ul class="agency-dropdown">
                            </ul>
                        </div>

                        <div class="bill_price">
                            <span>Tổng tiền hàng</span>
                            <span class="totalPrice">0</span>
                        </div>

                        <div class="bill_discount">
                            <span>Giảm giá</span>
                            <input type="number" class="input_discount" placeholder="0">
                        </div>

                        <div class="bill_finalPrice">
                            <span class="finalPrice_label">Đại lý cần trả</span>
                            <span class="finalPrice" id="finalPrice" name="finalPrice">0</span>
                        </div>

                        <div class="bill_note">
                            <input type="text" class="note-input" placeholder="Ghi chú">
                        </div>

                        <button class="bill_confirm">Thanh Toán</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>